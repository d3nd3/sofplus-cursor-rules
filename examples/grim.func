function grim_init()
{
  set ~ddfunc "function grim(*)%0A%7B%0Asp_sv_print_broadcast %22%n%0D%22%0A%7D"
  sp_sc_cvar_unescape ~ddfunc ~ddfunc
  sp_sc_func_load_cvar ~ddfunc

  _sp_sv_on_ctf_flag_capture grim
  
  sp_sc_func_exec spf_sc_list_add_func _sp_sv_on_client_begin grim_client_begin
}

function grim_client_begin(~slot)
{
  set ~empty "%n%0D"
  sp_sc_cvar_unescape ~empty ~empty
  sp_sv_print_client $~slot #~empty
}



